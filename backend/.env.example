# Supabase 설정
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# 업로드 설정
UPLOAD_DIR=./uploads

# JWT 설정 (프로덕션에서 반드시 변경)
JWT_SECRET=your-secret-key-here

# Database backend: sqlite (default) or postgres
DB_TYPE=sqlite

# PostgreSQL 설정 (DB_TYPE=postgres 일 때만 필요)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tenm_wt
DB_USER=postgres
DB_PASSWORD=

# Redis 캐싱 (optional - 비워두면 캐싱 비활성화)
REDIS_URL=

# FHIR EMR 설정 (optional - leave blank to disable)
FHIR_BASE_URL=
FHIR_AUTH_TOKEN=

# SMTP Email 설정 (optional - leave blank to disable email sending)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
